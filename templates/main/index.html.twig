{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}
{% block body %}
    <main class="main">
        <section class="col">
            <div class="col presentation">
                <h1>Site e-commerce</h1>
                <p>Bienvenue dans notre boutique</p>
            </div>
            <div class="col">
                {% for category in categories %}
                    {% if category.parent == null %}
                        <div class="col">
                            <h2>{{ category.name }}</h2>
                        </div>
                    {% else %}
                        <div class="cat">
                            <h3>{{ category.name }}</h3>
                            <a href="{{ path('categorie_list', {id: category.id}) }}">Voir les produits</a>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
{# À commenter / décommenter pour avoir le dump et analyser la page #}
            {# <div class="col">
                {{ dump() }}
            </div> #}
        </section>
    </main>
{% endblock %}
